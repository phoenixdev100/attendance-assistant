{
  "manifest_version": 3,
  "name": "Attendance Assistant",
  "version": "1.0.0",
  "description": "A smart attendance tracking extension that helps you manage your attendance automatically.",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
